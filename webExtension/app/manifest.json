{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "pledarix@rumantsch.ch",
      "strict_min_version": "58.0"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "*://api.pledari.ch/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["scripts/content.css"]
    }
  ],
  "__firefox__default_locale": "rm",
  "__chrome__default_locale": "de"
}
